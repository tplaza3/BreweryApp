<h1>These are the breweries in lovely <%= @city%>!</h1>

<body>
  <% @locations.each do |l| %>
	  <p>
			 <%if l.is_closed == "N" %>
	    	<%= "Name: #{l.brewery.name}"%><br>
			 	<%= "Address: #{l.street_address} "%><br>
			 	<%= "Coordinates: #{l.latitude}, #{l.longitude} "%><br>
			 	<%= "Description: #{l.brewery.description}"%><br>
			 	<%= "Phone: #{l.phone}"%><br>
			 	<a href = "/<% l.website %>"><%="#{l.website}"%></a><br>
			 <%else%>		 
			 <%end%>
	  </p>
  <% end%>


